<h1>All Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Published Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= book.published_date %></td>
        <td>
          <%= link_to 'Show', book_path(book) %> |
          <%= link_to 'Edit', edit_book_path(book) %> |
          <%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Book', new_book_path %>


<h1>New Book</h1>

<%= render 'form', book: @book %>

<%= link_to 'Back', books_path %>


<h1>Edit Book</h1>

<%= render 'form', book: @book %>

<%= link_to 'Back', books_path %>

<h1><%= @book.title %></h1>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Price:</strong>
  <%= @book.price %>
</p>

<p>
  <strong>Published Date:</strong>
  <%= @book.published_date %>
</p>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>

<%= form_with(model: book) do |form| %>
    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
  
    <div class="field">
      <%= form.label :author %>
      <%= form.text_field :author %>
    </div>
  
    <div class="field">
      <%= form.label :price %>
      <%= form.number_field :price, step: 0.01 %>
    </div>
  
    <div class="field">
      <%= form.label :published_date %>
      <%= form.date_select :published_date %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  